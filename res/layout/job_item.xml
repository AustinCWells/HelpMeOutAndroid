<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2c3e50"  >
    
     <TextView
        android:id="@+id/short_description"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/loading" 
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#fff" />

   <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading"
         android:textSize="15sp"
        android:textColor="#fff" 
         android:gravity="center_vertical"
         android:drawableLeft="@drawable/profile_white"
        android:layout_below="@id/short_description"
        android:drawablePadding="5dip" />
   
      <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading" 
        android:textSize="15sp"
         android:textColor="#fff" 
        android:layout_below="@id/name"
        android:drawableLeft="@drawable/money_white"
        android:gravity="center_vertical"
        android:drawablePadding="5dip"/>
      
      <TextView
        android:id="@+id/time_frame_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading" 
         android:textSize="15sp"
         android:textColor="#fff" 
        android:layout_below="@id/price"
        android:drawableLeft="@drawable/clock_white"
        android:gravity="center_vertical"
        android:drawablePadding="5dip"/>
      
          <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading"
         android:textSize="15sp"
         android:textColor="#fff" 
        android:layout_below="@id/time_frame_date"
        android:drawableLeft="@drawable/map_white"
        android:gravity="center_vertical"
        android:drawablePadding="5dip"/>
   


     <TextView
        android:paddingLeft="25dip"
        android:id="@+id/notesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textSize="25sp"
         android:textColor="#fff" 
        android:layout_below="@id/location"
         />
       <TextView
        android:padding="15dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textSize="15sp"
         android:textColor="#000" 
        android:layout_below="@id/notesTitle"
        android:background="@drawable/notes_style"
         />

 

    





    <Button
        android:id="@+id/offerHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/offerHelp"
        android:background="@drawable/button_style" 
          android:layout_below="@id/notes"
          android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            
          />

</RelativeLayout>
