<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/short_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/loading"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/short_description"
        android:drawableLeft="@drawable/profile_white"
        android:drawablePadding="5dip"
        android:gravity="center_vertical"
        android:text="@string/loading"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:drawableLeft="@drawable/money_white"
        android:drawablePadding="5dip"
        android:gravity="center_vertical"
        android:text="@string/loading"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/time_frame_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:drawableLeft="@drawable/clock_white"
        android:drawablePadding="5dip"
        android:gravity="center_vertical"
        android:text="@string/loading"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_frame_date"
        android:drawableLeft="@drawable/map_white"
        android:drawablePadding="5dip"
        android:gravity="center_vertical"
        android:text="@string/loading"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/notesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:paddingLeft="25dip"
        android:text="Notes"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notesTitle"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/notes_style"
        android:padding="15dip"
        android:text="@string/loading"
        android:textColor="#000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/offerHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notes"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/button_style"
        android:text="@string/offerHelp" />

</RelativeLayout>